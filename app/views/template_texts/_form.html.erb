<%= error_messages_for :template_text,:object=>@template_text %>
<div class="group">
  <%= f.label :title, t("activerecord.attributes.template_text.title", :default => "Title"), :class => :label %>
  <%= f.text_field :title, :class => 'text_field' %>
  <span class="description">Ex: título que será exibido para o usuário.</span>
</div>

<div class="group">
  <%= f.label :content, t("activerecord.attributes.template_text.content", :default => "Content"), :class => :label %>
  <%= f.text_area :content, :class => 'text_area' %>
</div>

<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>  
  <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}", template_texts_path, :class => "button" %>
</div>
