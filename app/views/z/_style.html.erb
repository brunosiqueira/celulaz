body{
color:#<%=@layout.color.text%>;
background-color:#<%=@layout.color.background%>;
background-image: url(<%=@layout.background_file_name%>);
<% if !@layout.repeat_background_x && !@layout.repeat_background_y %>
  background-repeat: no-repeat;
<% elsif !@layout.repeat_background_x || !@layout.repeat_background_y %>
  <%= " background-repeat: repeat-x; " if @layout.repeat_background_x %>
  <%= " background-repeat: repeat-y; " if @layout.repeat_background_y %>
<% end %>
<% if @layout.centralize_background %>
  background-position: top center;
<% else %>
  background-position: top left;
<% end %>
}
<% unless @layout.background_top.nil? %>
  #header{
  background-image: url(<%=@layout.background_top%>);
  background-repeat: no-repeat;
  height: <%=image_height(@layout.background_top)%>px !important;
  }
  .container{height: <%=image_height(@layout.background_top)%>px !important;}
<% end %>

