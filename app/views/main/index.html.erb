<script type="text/javascript">
  $(document).ready(function(){

    $('input#whoischeck-button').click(function(){
      if($('input#whoischeck').val() == null || $('input#whoischeck').val() == ''){
        alert('Campo obrigatório');
      } else {
        $('div#checkdomain-area span').html('<%=image_tag "colorbox/loading.gif"%>');
        $.ajax({
          type:"POST",
          url:'/whois/check',
          data:{
            domain:'www.'+ $('input#whoischeck').val()+'.com.br',
            authenticity_token:AUTH_TOKEN
          },
          dataType:"json",
          success:function(result){
            if (result == true || result == 'true'){
              $('div#checkdomain-area span').html('<span style="font-size: 10px; color: red; position: absolute; left: 0px; width: 320px; padding: 2px 10px; background-color: Pink; top: 41px;"> Domínio já utilizado</span>');
            } else{
              $('div#checkdomain-area span').html('<span style="font-size: 10px; color: green; position: absolute; left: 0px; width: 320px; padding: 2px 10px; background-color: PaleGreen; top: 41px;">Domínio livre</span>');
            }
          },
          error:function(request,status,errorThrown){
            alert('Erro na Ação!'+status)
          }
        });
      }
    });
  });
</script>