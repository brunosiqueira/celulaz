<div class="block">

	<div class="content">            
		<h2 class="title">Editar</h2>
	  	<div class="inner">
		    <% form_for:user, :url=>user_path(@user), :html => { :method => :put, :multipart => true, :class => "form" } do |f| %>
				<%= error_messages_for :user %>
			    <%= error_messages_for :person %>
				<div class="group">
					<%= f.label :avatar, "Avatar", :class => :label %>
					<%= f.file_field :avatar %>
				</div>
				<div class="group">
				    <%= f.label :email, "E-mail", :class => :label %>
					<%= f.text_field :email, :class => 'text_field' %>
				</div>
 				<%= render :partial => "people/person_edit" , :object => @user.person %>
				
				<div class="group navform wat-cf">
					<button class="button" type="submit">
					<%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Salvar")}") %> 
					<%= t("web-app-theme.save", :default => "Salvar") %>
					</button>  
					<%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancelar")}")} #{t("web-app-theme.cancel", :default => "Cancelar")}", root_path, :class => "button" %> 
				</div>
		    <% end %>
		</div>
	</div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>

    
