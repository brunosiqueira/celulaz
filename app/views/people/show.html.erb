<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", people_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_person_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", people_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">

      <%= render :partial=>"person_show", :object=>@person %>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_person_path(@person), :class => "button" %>
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", person_path(@person), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>