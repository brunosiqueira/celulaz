<div class="group">
  <%= f.label :subsidiary_id, t("activerecord.attributes.person.subsidiary_id", :default => "Subsidiary"), :class => :label %>
  <%= f.select :subsidiary_id, current_user.subsidiaries.collect { |p| [p.title, p.id.to_s] },{ :include_blank=>true, :class => 'date_select' } %>
</div>

<div class="group">
  <%= f.label :name, t("activerecord.attributes.person.name", :default => "Name"), :class => :label %>
  <%= f.text_field :name, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label :cpf, t("activerecord.attributes.person.cpf", :default => "Cpf"), :class => :label %>
  <%= f.text_field :cpf, :class=>"text_field", :size => 20, :onkeypress => "mascara(this,cpf)" %>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $("input#person_cpf").change(function(){
      jQuery.ajax({
        type:"POST",
        url: "<%=url_for :controller=>"people",:action=>"find_cpf"%>",
        data:{cpf:$(this).attr("value"),authenticity_token:AUTH_TOKEN}
      });
    });
  });
</script>

