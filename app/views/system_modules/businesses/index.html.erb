		<tr>
			<th>
				Faixa de VALOR UNITÁRIO do produto e/ou serviço disponibilizado pelo participante
			</th>
			<th>
				Comissão devida à CélulaZ SOBRE O VALOR EFETIVO do produto e/ou serviço disponibilizado pelo participante
			</th>
		</tr>
		<tr>
			<th>R$ 0,01 até R$ 100,00</th>
			<th>5%</th>
		</tr>
		<tr>
			<th>R$ 100,01 até R$ 200,00</th>
			<th>4,5%</th>
		</tr>
		<tr>
			<th>R$ 200,01 até R$ 300,00</th>
			<th>4%</th>
		</tr>
		<tr>
			<th>R$ 300,01 até R$ 500,00</th>
			<th>3,5%</th>
		</tr>
		<tr>
			<th>R$ 500,01 até R$ 1.000,00</th>
			<th>3%</th>
		</tr>
		<tr>
			<th>R$ 1.000,01 até R$ 3.000,00</th>
			<th>2,5%</th>
		</tr>
		<tr>
			<th>R$ 3.000,01 até R$ 8.000,00</th>
			<th>2%</th>
		</tr>
		<tr>
			<th>R$ 8.000,01 até R$ 26.000,00</th>
			<th>1,5%</th>
		</tr>
		<tr>
			<th>R$ 26.000,01 até R$ 50.000,00</th>
			<th>1%</th>
		</tr>
		<tr>
			<th>R$ 50.000,01 até R$ 100.000,00</th>
			<th>0,5%</th>
		</tr>
