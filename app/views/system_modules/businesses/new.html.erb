<% stylesheet "system_modules/business" %> 
<% javascript "system_modules/business" %>

<%= render "menu" %>

<h1>Publique uma a&ccedil;&atilde;o de venda</h1>

<% form_for([:system_modules,@business],:html => {:multipart => true} ) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :business_image %><br />
    <%= f.file_field :business_image %>
  </p>
  <p>
    <%= f.label :total %><br />
    <%= f.text_field :total %>
  </p>
  <p>
    <%= f.label :per_company %><br />
    <%= f.text_field :per_company %>
  </p>
  <p>
    <%= f.label :value %><br />
    <%= f.text_field :value %>
    <script type="text/javascript">
      jQuery("input#business_value").decimalMask({
        separator: ",",
        decSize: 2,
        intSize: 4
      });
    </script>
  </p>
  <p>
    <%= f.submit 'Criar' %>
  </p>
<% end %>

<%= link_to 'Voltar', system_modules_businesses_path %>