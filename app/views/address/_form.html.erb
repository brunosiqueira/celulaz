<h3>Endere&ccedil;o</h3>
  <div class="group">
    <%= f.label :street, t("activerecord.attributes.address.street", :default => "Street"), :class => :label %>
    <%= f.text_field :street, :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :number, t("activerecord.attributes.address.number", :default => "Number"), :class => :label %>
    <%= f.text_field :number, :class => 'text_field', :maxlength => 6, :onkeypress=>"mascara(this,soNumeros)" %>
  </div>

  <div class="group">
    <%= f.label :complement, t("activerecord.attributes.address.complement", :default => "Complement"), :class => :label %>
    <%= f.text_field :complement, :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :zip, t("activerecord.attributes.address.zip", :default => "Zip"), :class => :label %>
    <%= f.text_field :zip,:onkeypress=>"mascara(this,cep)", :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :neighborhood, t("activerecord.attributes.address.neighborhood", :default => "Neighborhood"), :class => :label %>
    <%= f.text_field :neighborhood, :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :city, t("activerecord.attributes.address.city", :default => "City"), :class => :label %>
    <%= f.text_field :city, :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :state, t("activerecord.attributes.address.state_id", :default => "State"), :class => :label %>
    <%= f.select :state, State.find(:all).collect { |p| [p.acronym, p.acronym] },{:include_blank=>true } %>
  </div>