<% javascript "third/jquery.decimalMask.1.1.1.min","third/jquery.maskedinput-1.2.2.min","company/business"%>
<% stylesheet "company/business","scaffold"%>
<h1>Editar Meu Neg√≥cio</h1>
<div style="width: 740px" class="gray-box">
  <%= image_tag @business.business_image.url(:big), :class=>'negocio' %>
  <div style="float: left; width:300px;">


    <% form_for([:company,@business]) do |f| %>
      <%= f.error_messages %>
      <p>
        <%= f.label :title %><br/>
        <%= f.text_field :title %>
      </p>
      <p>
        <%= f.label :total %><br/>
        <%= f.text_field :total %>
      </p>
      <p>
        <%= f.label :per_company %><br />
        <%= f.text_field :per_company %>
      </p>
      <p>
        <%= f.label :value %><br />
        <%= f.text_field :value %>
        <script type="text/javascript">
          jQuery("input#business_value").decimalMask({
            separator: ",",
            decSize: 2,
            intSize: 4
          });
        </script>
      </p>
      <p >
        <%= f.submit 'Salvar', :class=>'btn-input' %>
      </p>
    <% end %>
    <p style="width: 100%; float: left">
      <%= link_to 'Ver', company_business_path(@business)  %> |
      <%= link_to 'Voltar', company_businesses_path %>
    </p>
  </div>
</div>