<h1>Meus Negócios</h1>

<table>
  <tr>
    <th>Total</th>
    <th>Title</th>
  </tr>

<% @businesses.each do |business| %>
  <tr>
    <td><%=h business.total %></td>
    <td><%=h business.title %></td>
    <td><%= link_to 'Show', company_business_path(business) %></td>
    <td><%= link_to 'Edit', edit_company_business_path(business) %></td>
    <td><%= link_to 'Destroy', company_business_path(business), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo Negócio', new_company_business_path %>