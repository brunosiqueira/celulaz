<div class="block">

  <div class="content">            
    <h2 class="title"><%= t("web-app-theme.edit", :default => "Editar") %> senha</h2>
    <div class="inner">
		<% form_tag ({ :action => "update" }, { :class => "form" }) do -%>
			<div class="group">
			    <%= label_tag :old_password, "Senha atual", :class => :label %>
				<%= password_field_tag 'old_password', @old_password, :size => 45, :class => 'text_field' %>
			</div>
			<div class="group">
			    <%= label_tag :password, "Nova senha", :class => :label %>
				<%= password_field_tag 'password', {}, :size => 45, :class => 'text_field' %>
				<span class="description">Entre 4 e 40 caracteres</span>
			</div>
			<div class="group">
			    <%= label_tag :password_confirmation, "Repita a nova senha", :class => :label %>
				<%= password_field_tag 'password_confirmation', {}, :size => 45, :class => 'text_field' %>
			</div>
			<div class="group navform wat-cf">
				<button class="button" type="submit">
				<%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Alterar senha")}") %> 
				<%= t("web-app-theme.save", :default => "Alterar senha") %>
				</button>  
				<%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancelar")}")} #{t("web-app-theme.cancel", :default => "Cancelar")}", root_path, :class => "button" %> 
			</div>
		<% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>